extends layout

block content 
    h2 Update Book Details
    // Update Book Form
    form(action=`/books/${book.id}`, method="POST")
      p
      if errors && errors.length >0
        h2.error Ooooops!
        ul.error
          each error in errors 
            li #{error.message}
      p
        label(for="title") Title:
        input(type="text", name="title", id="title", value=book.title) 
      p 
        label(for="author") Author:  
        input(type="text", name="author", id="author", value=book.author)  
      p 
        label(for="genre") Genre:
        input(type="text", name="genre", id="genre", value=book.genre) 
      p 
        label(for="year") Year:
        input(type="text", name="year", id="year", value=book.year) 
      p
       input(type="submit" value="Update Book")
      p
            a.button(href="/books") Cancel 

    // Delete Book Form
    form(action=`/books/${book.id}/delete`, method="POST", onsubmit="return confirm('Are you sure you want to delete this book?');")
      input(type="submit" value="Delete Book")
